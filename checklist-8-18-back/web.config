<?xml version="1.0" encoding="utf-8"?>
<configuration>

  <appSettings>
    <add key="CHROMIUM_EXECUTABLE_PATH" value="C:\Program Files\Google\Chrome\Application\chrome.exe" />

    <add key="PORT" value="8080" />
    <add key="DB_HOST" value="brasil" />
    <add key="DB_PORT" value="3306" />
    <add key="DB_USERNAME" value="uaga_user" />
    <add key="DB_PASSWORD" value="uaga_password" />
    <add key="DB_DATABASE" value="uagabd" />
    <add key="JWT_SECRET" value="your_super_secret_key" />
    <add key="CORS_ORIGINS"
      value="http://localhost:5173,http://localhost:3000,http://outro-dominio.com" />
  </appSettings>

  <system.webServer>
    <iisnode
      watchedFiles="*.js;dist\*.js"
      loggingEnabled="true"
      devErrorsEnabled="true"
      logDirectory="iisnode_logs"
    />

    <handlers>
      <add name="iisnode" path="dist/main.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <rule name="NodeApp" stopProcessing="true">
          <match url="^(dist/main\.js|node_modules|test)(/.*)?$" />
          <action type="None" />
        </rule>

        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="dist/main.js" />
        </rule>
      </rules>
    </rewrite>

  </system.webServer>
</configuration>